" vim:ft=vim

Given(One line text):
  # text to be send

Execute(test-FloatermSend):
  FloatermNew
  let bufnr1 = bufnr('%')
  FloatermHide

  Log '# FloatermSend'
    FloatermSend
    sleep 500m
    Log getline('.')
    let lines = join(getbufline(bufnr1, 0, '$'))
    Log lines
    Assert lines =~ '# text to be send'

  Log '# FloatermSend with argument'
    FloatermNew
    let bufnr2 = bufnr('%')
    FloatermHide
    FloatermSend \# text to be send
    sleep 500m
    let lines = join(getbufline(bufnr2, 0, '$'))
    Assert lines =~ '# text to be send'

  FloatermKill!
  stopinsert
